#!/usr/bin/env ruby

require './lib/story'
require './lib/runner'
require './lib/link_builder'

case ARGV[0] && ARGV[0].strip
when 'create'
  name = ARGV[1]
  timestamp = Time.now.strftime('%Y%m%d%H%M%S')
  filename = "./stories/index/#{timestamp}.rb"

  print "Creating '#{filename}'..."

  IO.write(filename, <<-STORY)
story %q(#{name}) do
  status queued
  points 1
  created_by :unassigned
  assigned_to :unassigned
  tags *%w() # *%w(example example_two)

  description <<-DESCRIPTION
  DESCRIPTION

  comment :author, <<-COMMENT
  COMMENT
end
  STORY

  puts 'done'

  puts "Opening '#{filename}'..."
  exec(ENV['EDITOR'] || 'vim', filename)

when 'rebuild'
  LinkBuilder.all

when 'start'
when 'finish'
when 'tag'
when 'comment'
else
  if ARGV.any?
    CliTasks::Runner.run *ARGV
  else
    CliTasks::Runner.run 'stories/index/*'
  end
  puts
  puts sprintf(" %-20s | %-6s | %-60s | %-10s", :id, :points, :name, :status)
  puts sprintf(" %-20s | %6s | %-60s | %-10s", ?-*20, ?-*6, ?-*60, ?-*10)
  puts stories.map{|story| sprintf(" %-20s | %-6s | %-60s | %-10s", story.id, ?* * story.points.to_i, story.name.slice(0,60), story.status) }
end

