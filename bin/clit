#!/usr/bin/env ruby

require './lib/story'
require './lib/runner'

case ARGV[0] && ARGV[0].strip
when 'create'
  name = ARGV[1]
  id = String(name.hash).tr('0-9-','asdfghjklui')
  pp({id: id,
			name: name,
			length: id.length})
when 'start'
when 'finish'
when 'tag'
when 'comment'
else
  if ARGV.any?
    CliTasks::Runner.run *ARGV
  else
    CliTasks::Runner.run 'examples/*'
  end
  puts
  puts sprintf(" %-8s | %-6s | %-40s | %-10s", :id, :points, :name, :status)
  puts sprintf(" %-8s | %6s | %-40s | %-10s", ?-*8, ?-*6, ?-*40, ?-*10)
  puts stories.map{|story| sprintf(" %-8s | %-6s | %-40s | %-10s", story.id, ?* * story.points, story.name, story.status) }
end

